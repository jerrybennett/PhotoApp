<h1>Edit Review</h1>
<div class="row">
 <div class="col-md-12">

   <%= image_tag @review.post.post_img.url(:medium), class: "photo img-responsive img-rounded" %>

 </div>
</div>

 <%= form_for ([@review.post, @review]), html: { multipart: true } do |f| %>

   <div>
     <%= f.label :like %>
     <%= f.check_box :like, value: @review.like %><br />
   </div>

   <%= f.label :comment %><br />
   <%= f.text_field :comment, value: @review.comment, class: "form-control" %><br />

   <%= f.submit "Edit Review"%>

 <% end %>

</div>